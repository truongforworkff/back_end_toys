<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Add Product</title>
</head>
<body>
  <div class="container mt-5">
    <h1>Add Product</h1>
    <form action="/products/add-product" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="text" class="form-control" id="price" name="price" required>
      </div>
      <div class="mb-3">
        <label for="image01" class="form-label">Image 1 URL</label>
        <input type="text" class="form-control" id="image01" name="image01" required>
      </div>
      <div class="mb-3">
        <label for="image02" class="form-label">Image 2 URL</label>
        <input type="text" class="form-control" id="image02" name="image02" required>
      </div>
      <div class="mb-3">
        <label for="categorySlug" class="form-label">Category</label>
        <select class="form-select" id="categorySlug" name="categorySlug" required>
          <option value="">Select a category</option>
          {{#each categories}}
            <option value="{{this._id}}">{{this.display}}</option>
          {{/each}}
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Colors</label><br>
        {{#each colors}}
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="colors" id="color-{{@index}}" value="{{this}}">
            <label class="form-check-label" for="color-{{@index}}">{{this}}</label>
          </div>
        {{/each}}
      </div>
      <div class="mb-3">
        <label class="form-label">Sizes</label><br>
        {{#each sizes}}
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="sizes" id="size-{{@index}}" value="{{this}}">
            <label class="form-check-label" for="size-{{@index}}">{{this}}</label>
          </div>
        {{/each}}
      </div>
      <button type="submit" class="btn btn-primary">Add Product</button>
      <a href="/products/" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
